// Half diamond pattern

#include <stdio.h>

int main(void) {
    int n = 5; // number of rows (half of the diamond)

    // Upper half (increasing triangle)
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= i; j++) {
            printf("*");
        }
        printf("\n");
    }

    // Lower half (decreasing triangle)
    for (int i = n - 1; i >= 1; i--) {
        for (int j = 1; j <= i; j++) {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}
